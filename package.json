{
  "name": "language-learning-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:dev": "next build --turbopack",
    "build:pwa": "NODE_ENV=production next build",
    "build:vercel": "next build",
    "build:vercel:force": "VERCEL_FORCE_NO_BUILD_CACHE=1 next build",
    "start": "next start",
    "export": "ENABLE_STATIC_EXPORT=true next build",
    "export:pwa": "NODE_ENV=production ENABLE_STATIC_EXPORT=true next build",
    "cap:sync": "npx cap sync",
    "cap:copy": "npm run export && npx cap copy",
    "cap:copy:pwa": "npm run export:pwa && npx cap copy",
    "cap:open:android": "npm run cap:copy && npx cap open android",
    "cap:open:ios": "npm run cap:copy && npx cap open ios",
    "cap:sync:android": "npm run cap:copy && npx cap sync android",
    "cap:sync:ios": "npm run cap:copy && npx cap sync ios",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:update": "npx cap update",
    "mobile:android": "npm run export && npx cap sync android && npx cap open android",
    "mobile:ios": "npm run export && npx cap sync ios && npx cap open ios",
    "vercel:deploy": "vercel deploy",
    "vercel:deploy:force": "vercel deploy --force",
    "vercel:build": "vercel build",
    "clean:install": "node -e \"const fs=require('fs');['node_modules','package-lock.json'].forEach(p=>{try{fs.rmSync(p,{recursive:true,force:true})}catch(e){}})\" && npm install",
    "test:supabase": "node test-supabase.js"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@google/generative-ai": "^0.24.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.75.0",
    "@types/canvas-confetti": "^1.9.0",
    "autoprefixer": "^10.4.21",
    "canvas-confetti": "^1.9.3",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-pwa": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/keyboard": "^7.0.3",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "pify": "^3.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5"
  },
 "overrides": {
  "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.5",
  "rollup-plugin-terser": "npm:@rollup/plugin-terser@^0.4.4",
  "rimraf": "^6.1.0",
  "glob": "^11.0.3",
  "pify": "^3.0.0",
  "workbox-build": {
    "rollup-plugin-terser": "npm:@rollup/plugin-terser@^0.4.4",
    "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.5",
    "pify": "^3.0.0"
  },
  "next-pwa": {
    "pify": "^3.0.0"
  }
}
}

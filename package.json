{
  "name": "language-learning-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:dev": "next build --turbopack",
    "build:pwa": "NODE_ENV=production next build",
    "start": "next start",
    "export": "ENABLE_STATIC_EXPORT=true next build",
    "export:pwa": "NODE_ENV=production ENABLE_STATIC_EXPORT=true next build",
    "cap:sync": "npx cap sync",
    "cap:copy": "npm run export && npx cap copy",
    "cap:copy:pwa": "npm run export:pwa && npx cap copy",
    "cap:open:android": "npm run cap:copy && npx cap open android",
    "cap:open:ios": "npm run cap:copy && npx cap open ios",
    "cap:sync:android": "npm run cap:copy && npx cap sync android",
    "cap:sync:ios": "npm run cap:copy && npx cap sync ios"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@google/generative-ai": "^0.24.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.75.0",
    "@types/canvas-confetti": "^1.9.0",
    "autoprefixer": "^10.4.21",
    "canvas-confetti": "^1.9.3",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-pwa": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5"
  }
